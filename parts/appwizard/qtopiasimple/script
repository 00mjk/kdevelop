#!/usr/bin/perl

use gideon;

initGideon();
installLicense();

print "Installing project file\n";
install( "${src}/template-qtopiasimple/app.kdevelop",     "${dest}/${APPNAMELC}.kdevelop" );

print "Installing application framework\n";
mkdir( "${dest}/src", 0777 );
mkdir( "${dest}/bin", 0777 );
install( "${src}/template-qtopiasimple/app.pro",  "${dest}/${APPNAMELC}.pro" );

print "Installing application sources\n";
install( "${src}/template-qtopiasimple/src.pro",  "${dest}/src/src.pro" );
install( "${src}/template-qtopiasimple/main.cpp", "${dest}/src/${APPNAMELC}.cpp" );

print "Finished\n";
