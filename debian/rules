#!/usr/bin/make -f
# Made with the aid of debmake, by Christoph Lameter,
# games on the sample debian/rules file for GNU hello by Ian Jackson.

build:
	dh_testdir
	( CFLAGS="-g -O2 -pipe -Wall" \
	  CXXFLAGS="$$CFLAGS" \
	  ./configure --enable-docbase --enable-kdoc2 --enable-debug --disable-rpath \
	  --libdir=/usr/lib --includedir=/usr/include/kde \
	  --with-qt-dir=/usr/lib/qt1g --mandir=/usr/share/man )
 
	make 

	touch build

clean:
	dh_testdir
	rm -f build build-stamp install-stamp
	dh_clean 
	-make distclean
	-rm -f `find . -name "*~"`
	-rm -rf debian/menu debian/mailcap 
	-rm -rf config.log libtool config.status config.cache
	
binary-indep:	build
	dh_testroot
	dh_testdir
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch:	build
	dh_testroot
	dh_testdir
	-rm -rf debian/tmp
	make install DESTDIR=`pwd`/debian/tmp
	chmod a+x debian/kderules
	perl debian/kderules
	dh_movefiles
	dh_undocumented 
	dh_installdocs
	dh_installchangelogs
	dh_strip
	dh_compress
	dh_fixperms
	dh_perl
	dh_suidregister
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	perl debian/kderules update
	dh_builddeb    

# Below here is fairly generic really

binary:		binary-indep binary-arch

.PHONY: binary binary-arch binary-indep clean
