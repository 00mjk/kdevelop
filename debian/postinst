#!/bin/sh

set -e
case "$1" in
    configure)
      /sbin/ldconfig
      if [ -x /usr/sbin/install-docs ]; then
        /usr/sbin/install-docs -i /usr/share/doc-base/kdevelop-user
        /usr/sbin/install-docs -i /usr/share/doc-base/kdevelop-tutorial
        /usr/sbin/install-docs -i /usr/share/doc-base/kdevelop-programming
        /usr/sbin/install-docs -i /usr/share/doc-base/kdevelop-kdelibref
        /usr/sbin/install-docs -i /usr/share/doc-base/kdevelop-addendum
      fi
    ;;
 
    abort-upgrade|abort-remove|abort-deconfigure)
 
    ;;
 
    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 0
    ;;
esac
 
#DEBHELPER#
 
exit 0
