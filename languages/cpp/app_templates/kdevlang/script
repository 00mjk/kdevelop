#!/usr/bin/perl

use kdevelop;

initKDevelop();
installFileTemplate();
installLicense();
installAdmin();
installGNU();

print "Installing project file\n";
install( "${src}/template-kdevlang/app.kdevelop",      "${dest}/${APPNAMELC}.kdevelop" );

print "Installing application framework\n";
mkdir( "${dest}/src", 0777 );
mkdir( "${dest}/po", 0777 );
install( "${src}/template-common/kde-Makefile.am",     "${dest}/Makefile.am" );
install( "${src}/template-common/kde-Makefile.cvs",    "${dest}/Makefile.cvs" );
install( "${src}/template-kapp/subdirs",               "${dest}/subdirs");

print "Installing application sources\n";
install( "${src}/template-kdevlang/kdevlang-configure.in.in", "${dest}/configure.in.in" );
install( "${src}/template-kdevlang/src-Makefile.am", "${dest}/src/Makefile.am" );
install( "${src}/template-kdevlang/kdevlang_part.cpp",  "${dest}/src/${APPNAMELC}_part.cpp" );
install( "${src}/template-kdevlang/kdevlang_part.h",    "${dest}/src/${APPNAMELC}_part.h" );
install( "${src}/template-kdevlang/kdevlang.rc",   "${dest}/src/kdev${APPNAMELC}.rc" );
install( "${src}/template-kdevlang/kdevlang.desktop",   "${dest}/src/kdev${APPNAMELC}.desktop" );
install( "${src}/template-kdevlang/README.dox",   "${dest}/src/README.dox" );

print "Finished\n";
