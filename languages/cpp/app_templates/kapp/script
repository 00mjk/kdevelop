#!/usr/bin/perl

use kdevelop;

initKDevelop();
installFileTemplate();
installLicense();
installAdmin();
installGNU();
installDocbook();

print "Installing project file\n";
installHTML( "${src}/template-kapp/app.kdevelop",          "${dest}/${APPNAMELC}.kdevelop" );

print "Installing application framework\n";
mkdir( "${dest}/src", 0777 );
mkdir( "${dest}/debug", 0777 );
mkdir( "${dest}/optimized", 0777 );
mkdir( "${dest}/po", 0777 );
install( "${src}/template-common/kde-Makefile.am",     "${dest}/Makefile.am" );
install( "${src}/template-common/kde-Makefile.cvs",    "${dest}/Makefile.cvs" );
install( "${src}/template-common/kde-configure.in.in", "${dest}/configure.in.in" );
install( "${src}/template-common/kde-app.desktop",     "${dest}/src/${APPNAMELC}.desktop" );
install( "${src}/template-common/kde-app.lsm",         "${dest}/src/${APPNAMELC}.lsm" );
install( "${src}/template-common/hi16-app-app.png",    "${dest}/src/hi16-app-${APPNAMELC}.png");
install( "${src}/template-common/hi32-app-app.png",    "${dest}/src/hi32-app-${APPNAMELC}.png");
install( "${src}/template-common/kde-po-Makefile.am",  "${dest}/po/Makefile.am" );
install( "${src}/template-kapp/subdirs",               "${dest}/subdirs" );

print "Installing application sources\n";
install( "${src}/template-kapp/src-Makefile.am",       "${dest}/src/Makefile.am" );
install( "${src}/template-kapp/app.cpp",               "${dest}/src/${APPNAMELC}.cpp" );
install( "${src}/template-kapp/app.h",                 "${dest}/src/${APPNAMELC}.h" );
install( "${src}/template-kapp/appview.cpp",           "${dest}/src/${APPNAMELC}view.cpp" );
install( "${src}/template-kapp/appview.h",             "${dest}/src/${APPNAMELC}view.h" );
install( "${src}/template-kapp/appiface.h",            "${dest}/src/${APPNAMELC}iface.h" );
install( "${src}/template-kapp/app_client.cpp",        "${dest}/src/${APPNAMELC}_client.cpp" );
install( "${src}/template-kapp/pref.cpp",              "${dest}/src/pref.cpp" );
install( "${src}/template-kapp/pref.h",                "${dest}/src/pref.h" );
install( "${src}/template-kapp/main.cpp",              "${dest}/src/main.cpp" );
install( "${src}/template-kapp/appui.rc",              "${dest}/src/${APPNAMELC}ui.rc" );
install( "${src}/template-kapp/README",                "${dest}/src/README" );

print "Finished\n";
